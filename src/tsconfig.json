{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "es2017",
    "skipLibCheck": true,
    "lib": ["es2019"],
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "packages/*/node_modules",
    "packages/*/build",
    "packages/*/__tests__"
  ]
}
